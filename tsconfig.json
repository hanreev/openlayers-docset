{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "target": "es5",
    "typeRoots": [
      "typings/"
    ]
  },
  "include": [
    "test.ts",
    "typings/**/*"
  ]
}
